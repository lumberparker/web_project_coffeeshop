# Root indicator
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Specific for Python files
[*.py]
indent_size = 4

# Specific for JavaScript files
[*.js]
indent_size = 2

# Ignore settings for certain files
[*.min.js]